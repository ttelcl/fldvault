<UserControl x:Class="ZvaultKeyServer.Main.Keys.KeyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZvaultKeyServer.Main.Keys"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:KeyViewModel, IsDesignTimeCreatable=False}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto" MinWidth="50"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <TextBlock
                Text="{Binding KeyId}"
                FontFamily="Lucida Sans Typewriter"/>
        </Grid>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            BorderThickness="0,0,0,1"
            BorderBrush="{DynamicResource MahApps.Brushes.Accent}">
            <TextBlock 
                Text="{Binding ShortName}"
                ToolTip="{Binding FolderName}"/>
        </Border>
        <!-- #106D8764 -->
        <Border
            Grid.Column="1"
            Grid.Row="0"
            Grid.RowSpan="2"
            Padding="5,3"
            BorderThickness="1"
            Background="#10CC4400"
            BorderBrush="{DynamicResource MahApps.Brushes.Accent2}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Status}"/>
                <TextBlock Text="{Binding StampText}"/>
                <TextBlock Text="{Binding StampReason}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
