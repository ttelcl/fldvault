<UserControl
    x:Class="ZvaultViewerEditor.Main.VaultOuterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:ZvaultViewerEditor.Main"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance local:VaultOuterViewModel, IsDesignTimeCreatable=False}"
    d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox
        Header="{Binding Label}">
        <DockPanel>
            <Border
                Margin="0,0,0,5"
                DockPanel.Dock="Top"
                BorderThickness="1"
                BorderBrush="{DynamicResource MahApps.Brushes.Accent2}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                        <RowDefinition Height="Auto" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Vault File:"
                               TextAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="5,0,5,3"/>
                    <TextBox
                        Grid.Row="0" Grid.Column="1"
                        Text="{Binding FileName, Mode=OneWay}"
                        FontFamily="Lucida Sans Typewriter"
                        IsReadOnly="True"
                        IsReadOnlyCaretVisible="True"
                        BorderThickness="0.5"
                        Margin="5,0,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="Vault Folder:"
                               TextAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="5,0,5,3"/>
                    <TextBox
                        Grid.Row="1" Grid.Column="1"
                        Text="{Binding FilePath, Mode=OneWay}"
                        FontFamily="Lucida Sans Typewriter"
                        IsReadOnly="True"
                        IsReadOnlyCaretVisible="True"
                        BorderThickness="0.5"
                        Margin="5,0,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Key ID:"
                               TextAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="5,0,5,3"/>
                    <DockPanel
                        Grid.Row="2" Grid.Column="1">
                        <TextBox
                            DockPanel.Dock="Left"
                            Text="{Binding KeyId, Mode=OneWay}"
                            FontFamily="Lucida Sans Typewriter"
                            IsReadOnly="True"
                            IsReadOnlyCaretVisible="True"
                            BorderThickness="0.5"
                            Margin="5,0,0,0"/>
                        <Button
                            Command="{Binding CopyFullKeyIdCommand}"
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            ToolTip="Copy Full Key ID"
                            Style="{DynamicResource MahApps.Styles.Button.Circle}"
                            Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                            DockPanel.Dock="Left">
                            <iconPacks:PackIconMaterial
                                Padding="0"
                                Margin="2,0,0,0"
                                Kind="ContentCopy" />
                        </Button>
                        <TextBox
                            DockPanel.Dock="Left"
                            Text="{Binding KeyIdShort, Mode=OneWay}"
                            FontFamily="Lucida Sans Typewriter"
                            IsReadOnly="True"
                            IsReadOnlyCaretVisible="True"
                            BorderThickness="0.5"
                            Margin="30,0,0,0"/>
                        <Button
                            Command="{Binding CopyShortKeyIdCommand}"
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            ToolTip="Copy Short Key ID"
                            Style="{DynamicResource MahApps.Styles.Button.Circle}"
                            Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                            DockPanel.Dock="Left">
                            <iconPacks:PackIconMaterial
                                Padding="0"
                                Margin="2,0,0,0"
                                Kind="ContentCopy" />
                        </Button>
                        <Grid/>
                    </DockPanel>
                </Grid>
            </Border>
            <!-- This Grid is just used to wrap alternatives -->
            <Grid>
                <Grid Visibility="{Binding IsVaultKeyKnown, Converter={StaticResource VisibleIfNot}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Key Status:"
                               TextAlignment="Right"
                               Margin="5,0,5,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Foreground="Orange"
                               Text="{Binding KeyStatus}"
                               Margin="5,0,5,0"/>
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <local:KeyEntryView
                            Grid.Row="0" Grid.Column="0"
                            DataContext="{Binding KeyEntryModel}"/>
                    </Grid>
                </Grid>
                <Grid Visibility="{Binding IsVaultKeyKnown, Converter={StaticResource VisibleIf}}">
                    <local:VaultInnerView DataContext="{Binding InnerModel}"/>
                </Grid>
            </Grid>
        </DockPanel>
    </GroupBox>
</UserControl>
